# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                 controllers.Application.index()
GET     /search                           controllers.Application.searchPage()

# API
GET     /api/generateToken                controllers.Application.generateToken()
GET     /api/testtoken/:tokenUUID/        controllers.Application.tokenTest(tokenUUID : String)


GET     /api/getAvailableFields           controllers.SearchAPI.getAvailableFields()
POST    /api/search                       controllers.SearchAPI.search()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                     controllers.Assets.at(path="/public", file)
