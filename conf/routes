# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                 controllers.Application.index()
GET     /search                           controllers.Application.searchPage()

# API
GET     /api/generateToken                controllers.Application.generateToken()
GET     /api/testtoken/:tokenUUID/        controllers.Application.tokenTest(tokenUUID : String)
GET     /annotations/upload               controllers.annotations.AnnotationsPages.annotationsUploadFilesPage()
GET     /annotations                      controllers.annotations.AnnotationsPages.annotationsMainPage()


GET     /api/annotations/filesinfo        controllers.annotations.AnnotationsAPI.getFilesInfo()
POST    /api/annotations/data             controllers.annotations.AnnotationsAPI.data()
POST    /api/annotations/upload           controllers.annotations.AnnotationsAPI.upload()
POST    /api/annotations/delete           controllers.annotations.AnnotationsAPI.delete()
GET     /api/getAvailableFields           controllers.SearchAPI.getAvailableFields()
POST    /api/search                       controllers.SearchAPI.search()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                     controllers.Assets.at(path="/public", file)
